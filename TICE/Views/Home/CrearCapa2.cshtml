            <div class="panel-heading"><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> Lista Talleres</div>
            <div class="panel-body">

                <input type="hidden" value="@ViewData["codigoCapa"]" name="codigoCapa" id="codigoCapa" />

                @*<button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">
